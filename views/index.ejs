    <form method="POST" action="/todo" id="commentForm">
      <div class="form-group top-cat sides-cat">
        <label for="whenDue">Due Date</label>
        <input type="date" name="due_date" class="form-control" id="due_date">
      </div>
      <div class="form-group sides-cat">
        <label for="theDescription">Description</label>
        <input type="text" name="description" class="form-control" id="description" name="description">
      </div>
      <div class="form-group sides-cat">
        <label for="theTitle">Title</label>
        <input type="text" name="title" class="form-control" id="title" name="description">
      </div>
      <div class="form-group sides-cat">
        <label for="thePriority">Priority</label>
        <input type="number" class="form-control" id="priority" name="priority">
      </div>
      <div class="checkbox sides-cat">
        <label>
          <input type="checkbox">Complete
        </label>
      </div>
      <div class="center-it bottom-cat">
      <button type="submit" class="btn btn-default">Submit</button>
      </div>
    </form>


